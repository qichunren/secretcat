<%# Login Form Container %>
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">
      <%= t('auth.login.title') %>
    </h2>
    <p class="mt-2 text-center text-sm text-gray-400">
      <%= t('auth.login.subtitle') %>
    </p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with(url: login_path, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, t('auth.login.email'), class: "block text-sm font-medium leading-6 text-white" %>
        <div class="mt-2">
          <%= f.email_field :email, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6", required: true %>
        </div>
      </div>

      <div>
        <%= f.label :master_password, t('auth.login.password'), class: "block text-sm font-medium leading-6 text-white" %>
        <div class="mt-2">
          <%= f.password_field :master_password, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6", required: true %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
          <%= f.label :remember_me, t('auth.login.remember_me'), class: "ml-3 block text-sm leading-6 text-white" %>
        </div>
      </div>

      <div>
        <%= f.submit t('auth.login.submit'), class: "flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-400">
      <%= t('auth.login.no_account') %>
      <%= link_to t('auth.login.sign_up'), signup_path, class: "font-semibold leading-6 text-indigo-400 hover:text-indigo-300" %>
    </p>
  </div>
</div>
