<%# 密码库页面 %>
<div class="glassmorphism rounded-2xl p-6 shadow-xl min-h-[calc(100vh-8rem)]">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6">密码库</h1>
      <p class="mt-2 text-sm text-gray-200">
        安全存储的密码列表。所有数据使用高强度加密保护。
      </p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_password_entry_path, class: "group relative inline-flex items-center gap-x-2 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:from-indigo-600 hover:to-purple-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all duration-200" do %>
        <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        添加新密码
      <% end %>
    </div>
  </div>

  <div class="mt-8 flow-root flex-1">
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden glassmorphism rounded-xl border border-gray-200/20 min-h-[400px]">
          <table class="min-w-full divide-y divide-gray-200/20">
            <thead>
              <tr class="bg-white/5">
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-200 sm:pl-6">名称</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-200">网址</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-200">用户名</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">操作</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200/20">
              <% @password_entries.each do |entry| %>
                <% decrypted_data = entry.decrypt_data(current_key) %>
                <tr class="hover:bg-white/5 transition-colors duration-150">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                    <div class="flex items-center">
                      <div class="h-8 w-8 flex-shrink-0 rounded-lg bg-gradient-to-br from-indigo-500/20 to-purple-600/20 flex items-center justify-center">
                        <%= entry.name[0].upcase %>
                      </div>
                      <div class="ml-4">
                        <div class="font-medium text-gray-200"><%= entry.name %></div>
                        <div class="text-gray-400 text-xs">
                          更新于 <%= time_ago_in_words(entry.updated_at) %>前
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-300">
                    <% if decrypted_data['url'].present? %>
                      <%= link_to decrypted_data['url'], decrypted_data['url'], target: '_blank', class: "text-indigo-400 hover:text-indigo-300 transition-colors duration-150" %>
                    <% else %>
                      <span class="text-gray-500">未设置</span>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-300">
                    <div class="flex items-center space-x-2">
                      <span class="font-mono"><%= decrypted_data['username'] %></span>
                      <button data-controller="clipboard" data-clipboard-text-value="<%= decrypted_data['username'] %>" data-action="clipboard#copy" class="text-gray-400 hover:text-indigo-400 transition-colors duration-150">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                        </svg>
                      </button>
                    </div>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <div class="flex items-center justify-end space-x-2">
                      <%= link_to password_entry_path(entry), class: "text-indigo-400 hover:text-indigo-300 transition-colors duration-150 p-2 rounded-lg hover:bg-white/5" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                      
                      <%= link_to edit_password_entry_path(entry), class: "text-indigo-400 hover:text-indigo-300 transition-colors duration-150 p-2 rounded-lg hover:bg-white/5" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>

                      <%= form_with(url: password_entry_path(entry), method: :delete, data: { 
                        controller: 'confirm-delete',
                        'confirm-delete-title-value': entry.name 
                      }) do |f| %>
                        <button type="button" data-action="confirm-delete#showModal" class="text-red-400 hover:text-red-300 transition-colors duration-150 p-2 rounded-lg hover:bg-white/5">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        </button>

                        <%# 确认删除对话框 %>
                        <div data-confirm-delete-target="modal" class="hidden fixed inset-0 bg-gray-900/75 backdrop-blur-sm z-50" data-action="click->confirm-delete#backgroundClick">
                          <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                            <div class="relative transform overflow-hidden glassmorphism rounded-xl px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">
                              <div class="sm:flex sm:items-start">
                                <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-900/20 sm:mx-0 sm:h-10 sm:w-10">
                                  <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                  </svg>
                                </div>
                                <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                                  <h3 class="text-lg font-semibold leading-6 text-gray-200" data-confirm-delete-target="title"></h3>
                                  <div class="mt-2">
                                    <p class="text-sm text-gray-400">
                                      您确定要删除这个密码吗？此操作无法撤销。
                                    </p>
                                  </div>
                                </div>
                              </div>
                              <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                                <button type="button" data-action="confirm-delete#confirm" class="inline-flex w-full justify-center rounded-lg bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto">
                                  确认删除
                                </button>
                                <button type="button" data-action="confirm-delete#hideModal" class="mt-3 inline-flex w-full justify-center rounded-lg bg-white/10 px-3 py-2 text-sm font-semibold text-gray-300 shadow-sm ring-1 ring-inset ring-gray-300/20 hover:bg-white/20 sm:mt-0 sm:w-auto">
                                  取消
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

