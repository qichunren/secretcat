<%# 密码详情页面 %>
<div class="glassmorphism rounded-2xl p-8 shadow-xl max-w-3xl mx-auto">
  <div class="text-center mb-8">
    <div class="mx-auto h-16 w-16 flex-shrink-0 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center mb-4">
      <span class="text-2xl font-bold text-white"><%= @password_entry.name[0].upcase %></span>
    </div>
    <h1 class="text-2xl font-bold text-gray-200"><%= @password_entry.name %></h1>
    <p class="mt-2 text-sm text-gray-400">
      创建于 <%= l(@password_entry.created_at, format: :long) %>
      <% if @password_entry.updated_at != @password_entry.created_at %>
        · 更新于 <%= time_ago_in_words(@password_entry.updated_at) %>前
      <% end %>
    </p>
  </div>

  <% decrypted_data = @password_entry.decrypt_data(current_key) %>

  <div class="space-y-6">
    <%# 网址 %>
    <div class="glassmorphism rounded-xl p-4 hover:bg-white/5 transition-colors duration-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="p-2 rounded-lg bg-indigo-500/10">
            <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-400">网址</div>
            <div class="mt-1">
              <% if decrypted_data['url'].present? %>
                <%= link_to decrypted_data['url'], decrypted_data['url'], target: '_blank', class: "text-indigo-400 hover:text-indigo-300 transition-colors duration-150 break-all" %>
              <% else %>
                <span class="text-gray-500">未设置</span>
              <% end %>
            </div>
          </div>
        </div>
        <% if decrypted_data['url'].present? %>
          <button type="button" data-controller="clipboard" data-clipboard-text-value="<%= decrypted_data['url'] %>" data-action="clipboard#copy" class="p-2 text-gray-400 hover:text-indigo-400 rounded-lg hover:bg-white/5 transition-all duration-150">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
            </svg>
          </button>
        <% end %>
      </div>
    </div>

    <%# 用户名 %>
    <div class="glassmorphism rounded-xl p-4 hover:bg-white/5 transition-colors duration-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="p-2 rounded-lg bg-indigo-500/10">
            <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-400">用户名</div>
            <div class="mt-1 font-mono text-gray-200">
              <%= decrypted_data['username'] %>
            </div>
          </div>
        </div>
        <button type="button" data-controller="clipboard" data-clipboard-text-value="<%= decrypted_data['username'] %>" data-action="clipboard#copy" class="p-2 text-gray-400 hover:text-indigo-400 rounded-lg hover:bg-white/5 transition-all duration-150">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
          </svg>
        </button>
      </div>
    </div>

    <%# 密码 %>
    <div class="glassmorphism rounded-xl p-4 hover:bg-white/5 transition-colors duration-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="p-2 rounded-lg bg-indigo-500/10">
            <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <div>
            <div class="text-sm font-medium text-gray-400">密码</div>
            <div class="mt-1 relative">
              <div id="password-dots" class="font-mono text-gray-200">••••••••</div>
              <div id="password-text" class="hidden font-mono text-gray-200"><%= decrypted_data['password'] %></div>
            </div>
          </div>
        </div>
        <div class="flex items-center space-x-2">
          <button onclick="togglePassword()" class="p-2 text-gray-400 hover:text-indigo-400 rounded-lg hover:bg-white/5 transition-all duration-150">
            <svg id="show-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            <svg id="hide-icon" class="hidden w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
            </svg>
          </button>
          <button type="button" data-controller="clipboard" data-clipboard-text-value="<%= decrypted_data['password'] %>" data-action="clipboard#copy" class="p-2 text-gray-400 hover:text-indigo-400 rounded-lg hover:bg-white/5 transition-all duration-150">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# 操作按钮 %>
  <div class="mt-8 flex items-center justify-end space-x-4">
    <%= link_to "返回", password_entries_path, class: "text-gray-400 hover:text-gray-300 transition-colors duration-150" %>
    
    <div class="flex items-center space-x-2">
      <%= link_to edit_password_entry_path(@password_entry), class: "inline-flex items-center space-x-2 px-4 py-2 rounded-lg bg-indigo-500/10 text-indigo-400 hover:bg-indigo-500/20 transition-all duration-150" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <span>编辑</span>
      <% end %>

      <%= button_to password_entry_path(@password_entry), method: :delete, class: "inline-flex items-center space-x-2 px-4 py-2 rounded-lg bg-red-500/10 text-red-400 hover:bg-red-500/20 transition-all duration-150", data: { confirm: "确定要删除这个密码吗？" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        <span>删除</span>
      <% end %>
    </div>
  </div>
</div>

<%# JavaScript 功能 %>
<%= javascript_tag do %>
  function togglePassword() {
    const passwordField = document.getElementById('password-field');
    const eyeIcon = document.getElementById('eye-icon');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      eyeIcon.innerHTML = `
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
      `;
    } else {
      passwordField.type = 'password';
      eyeIcon.innerHTML = `
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      `;
    }
  }
<% end %>
