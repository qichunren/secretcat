<div class="bg-slate-900 min-h-screen">
  <%# Hero Section %>
  <div class="relative isolate overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 py-12 sm:py-32 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
          <%= t('home.how_it_works.title') %>
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-300">
          <%= t('home.how_it_works.description') %>
        </p>
      </div>
    </div>
  </div>

  <%# 主要内容区域 %>
  <div class="relative">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <%# 端到端加密 %>
      <div class="mx-auto max-w-2xl lg:text-center mb-16">
        <h2 class="text-base font-semibold leading-7 text-indigo-400"><%= t('home.features.subtitle') %></h2>
        <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">
          <%= t('home.how_it_works.steps.encryption.title') %>
        </p>
        <p class="mt-6 text-lg leading-8 text-gray-300">
          <%= t('home.how_it_works.steps.encryption.description') %>
        </p>
      </div>

      <%# 工作原理步骤 %>
      <div class="mx-auto max-w-2xl">
        <div class="space-y-16">
          <%# 步骤 1：主密码 %>
          <div class="relative">
            <div class="relative rounded-xl bg-slate-800/50 backdrop-blur-sm p-8 shadow-xl ring-1 ring-white/10">
              <div class="absolute -top-3 left-4 inline-flex items-center justify-center rounded-lg bg-indigo-500 p-2">
                <span class="text-xl font-bold text-white">1</span>
              </div>
              <h3 class="pt-4 text-xl font-bold leading-7 text-white"><%= t('home.how_it_works.master_password.role') %></h3>
              <p class="mt-4 text-base leading-7 text-gray-300">
                <%= t('home.how_it_works.master_password.description') %>
              </p>
              <ul class="mt-4 space-y-3 text-gray-300">
                <% t('home.how_it_works.master_password.points').each do |point| %>
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>

          <%# 步骤 2：密码加密 %>
          <div class="relative">
            <div class="relative rounded-xl bg-slate-800/50 backdrop-blur-sm p-8 shadow-xl ring-1 ring-white/10">
              <div class="absolute -top-3 left-4 inline-flex items-center justify-center rounded-lg bg-indigo-500 p-2">
                <span class="text-xl font-bold text-white">2</span>
              </div>
              <h3 class="pt-4 text-xl font-bold leading-7 text-white"><%= t('home.how_it_works.password_encryption.title') %></h3>
              <p class="mt-4 text-base leading-7 text-gray-300">
                <%= t('home.how_it_works.password_encryption.description') %>
              </p>
              <ul class="mt-4 space-y-3 text-gray-300">
                <% t('home.how_it_works.password_encryption.points').each do |point| %>
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>

          <%# 步骤 3：安全存储 %>
          <div class="relative">
            <div class="relative rounded-xl bg-slate-800/50 backdrop-blur-sm p-8 shadow-xl ring-1 ring-white/10">
              <div class="absolute -top-3 left-4 inline-flex items-center justify-center rounded-lg bg-indigo-500 p-2">
                <span class="text-xl font-bold text-white">3</span>
              </div>
              <h3 class="pt-4 text-xl font-bold leading-7 text-white"><%= t('home.how_it_works.secure_storage.title') %></h3>
              <p class="mt-4 text-base leading-7 text-gray-300">
                <%= t('home.how_it_works.secure_storage.description') %>
              </p>
              <ul class="mt-4 space-y-3 text-gray-300">
                <% t('home.how_it_works.secure_storage.points').each do |point| %>
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>

          <%# 步骤 4：访问密码 %>
          <div class="relative">
            <div class="relative rounded-xl bg-slate-800/50 backdrop-blur-sm p-8 shadow-xl ring-1 ring-white/10">
              <div class="absolute -top-3 left-4 inline-flex items-center justify-center rounded-lg bg-indigo-500 p-2">
                <span class="text-xl font-bold text-white">4</span>
              </div>
              <h3 class="pt-4 text-xl font-bold leading-7 text-white"><%= t('home.how_it_works.password_access.title') %></h3>
              <p class="mt-4 text-base leading-7 text-gray-300">
                <%= t('home.how_it_works.password_access.description') %>
              </p>
              <ul class="mt-4 space-y-3 text-gray-300">
                <% t('home.how_it_works.password_access.points').each do |point| %>
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <%# 安全建议 %>
        <div class="mt-16">
          <div class="rounded-xl bg-indigo-500/10 p-8 shadow-xl ring-1 ring-indigo-500/20">
            <h3 class="text-xl font-bold leading-7 text-white"><%= t('home.how_it_works.security_tips.title') %></h3>
            <ul class="mt-4 space-y-3 text-gray-300">
              <% t('home.how_it_works.security_tips.points').each do |point| %>
                <li class="flex items-center">
                  <svg class="h-5 w-5 text-indigo-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                  <%= point %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

        <%# 开始使用按钮 %>
        <div class="mt-16 py-8 flex justify-center">
          <%= link_to t('home.how_it_works.get_started'), signup_path, class: "rounded-xl bg-indigo-500 px-8 py-4 text-base font-semibold text-white shadow-lg hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400 transition-all duration-200 hover:scale-[1.02]" %>
        </div>
      </div>
    </div>
  </div>
</div> 