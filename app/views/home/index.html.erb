<%# Hero Section %>
<div class="relative isolate overflow-hidden">
  <%# Background gradient effect %>
  <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
    <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
  </div>

  <div class="mx-auto px-6 pb-24 pt-0 sm:pb-32 lg:flex lg:px-8 lg:py-40">
    <div class="flex-shrink-0 lg:mx-0 lg:pt-8">
      <div class="mt-12 sm:mt-32 lg:mt-16">
        <a href="#" class="inline-flex space-x-6">
          <span class="rounded-full bg-indigo-500/10 px-3 py-1 text-sm font-semibold leading-6 text-indigo-400 ring-1 ring-inset ring-indigo-500/20"><%= t('home.latest_version') %></span>
          <span class="inline-flex items-center space-x-2 text-sm font-medium leading-6 text-gray-300">
            <span>v1.0.0</span>
            <svg class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
          </span>
        </a>
      </div>
      <h1 class="mt-10 text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl xl:text-6xl max-w-3xl">
        <%= t('tagline') %>
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-300 max-w-2xl">
        <%= t('home.hero.description') %>
      </p>
      <div class="mt-10 flex flex-col sm:flex-row items-center gap-x-6 gap-y-4">
        <% if current_user %>
          <%= link_to t('nav.password_vault'), password_entries_path, class: "rounded-xl bg-indigo-500 px-8 py-4 text-base font-semibold text-white shadow-lg hover:bg-indigo-400 hover:scale-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400 transition-all duration-200" %>
        <% else %>
          <%= link_to t('home.hero.free_start'), signup_path, class: "rounded-xl bg-indigo-500 px-8 py-4 text-base font-semibold text-white shadow-lg hover:bg-indigo-400 hover:scale-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400 transition-all duration-200" %>
          <%= link_to t('home.hero.view_source'), "https://github.com/qichunren/secretcat", class: "text-base font-semibold leading-6 text-gray-300 hover:text-white transition-colors duration-200 px-4 py-2" %>
        <% end %>
      </div>
    </div>
    <div class="mx-auto mt-4 flex sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-0 lg:flex-none xl:ml-32">
      <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
        <img src="<%= asset_path('hero.png') %>" alt="App screenshot" width="2432" height="1442" class="w-[24rem] rounded-md object-fill">
      </div>
    </div>
  </div>
</div>

<%# Features Section %>
<div class="relative isolate overflow-hidden py-8 sm:py-32">
  <div class="mx-auto px-6 lg:px-8">
    <div class="mx-auto lg:text-center">
      <h2 class="text-base font-semibold leading-7 text-indigo-400"><%= t('home.features.subtitle') %></h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">
        <%= t('home.features.title') %>
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-300">
        <%= t('home.features.description') %>
      </p>
    </div>
    <div class="mx-auto mt-16 sm:mt-20 lg:mt-24">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        <div class="flex flex-col">
          <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
            <svg class="h-5 w-5 flex-none text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
            </svg>
            <%= t('home.features.encryption.title') %>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-300">
            <p class="flex-auto"><%= t('home.features.encryption.description') %></p>
          </dd>
        </div>
        <div class="flex flex-col">
          <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
            <svg class="h-5 w-5 flex-none text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z" />
            </svg>
            <%= t('home.features.ease_of_use.title') %>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-300">
            <p class="flex-auto"><%= t('home.features.ease_of_use.description') %></p>
          </dd>
        </div>
        <div class="flex flex-col">
          <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-white">
            <svg class="h-5 w-5 flex-none text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M15.312 11.424a5.5 5.5 0 01-9.201 2.466l-.312-.311h2.433a.75.75 0 000-1.5H3.989a.75.75 0 00-.75.75v4.242a.75.75 0 001.5 0v-2.43l.31.31a7 7 0 0011.712-3.138.75.75 0 00-1.449-.39zm1.23-3.723a.75.75 0 00.219-.53V2.929a.75.75 0 00-1.5 0V5.36l-.31-.31A7 7 0 003.239 8.188a.75.75 0 101.448.389A5.5 5.5 0 0113.89 6.11l.311.31h-2.432a.75.75 0 000 1.5h4.243a.75.75 0 00.53-.219z" clip-rule="evenodd" />
            </svg>
            <%= t('home.features.sync.title') %>
          </dt>
          <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-300">
            <p class="flex-auto"><%= t('home.features.sync.description') %></p>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

<%# Stats Section %>
<div class="relative isolate overflow-hidden py-8 sm:py-32">
  <div class="mx-auto px-6 lg:px-8">
    <div class="mx-auto">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
          <%= t('home.stats.title') %>
        </h2>
        <p class="mt-4 text-lg leading-8 text-gray-300">
          <%= t('home.stats.description') %>
        </p>
      </div>
      <dl class="mt-16 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4">
        <div class="flex flex-col bg-white/5 p-8">
          <dt class="text-sm font-semibold leading-6 text-gray-300"><%= t('home.stats.open_source') %></dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-white">100%</dd>
        </div>
        <div class="flex flex-col bg-white/5 p-8">
          <dt class="text-sm font-semibold leading-6 text-gray-300"><%= t('home.stats.end_to_end') %></dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-white">AES-256</dd>
        </div>
        <div class="flex flex-col bg-white/5 p-8">
          <dt class="text-sm font-semibold leading-6 text-gray-300"><%= t('home.stats.code_review') %></dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-white"><%= t('home.stats.strict') %></dd>
        </div>
        <div class="flex flex-col bg-white/5 p-8">
          <dt class="text-sm font-semibold leading-6 text-gray-300"><%= t('home.stats.data_storage') %></dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-white"><%= t('home.stats.local') %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
