<%# Hero Section %>
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 md:translate-x-[30%]">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white"><%= t('auth.signup.title') %></h2>
      <p class="mt-2 text-lg leading-8 text-gray-300">
        <%= t('auth.signup.subtitle') %>
      </p>
    </div>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white/5 backdrop-blur-sm px-6 py-8 shadow-2xl ring-1 ring-white/10 rounded-xl sm:px-10">
      <%= form_with(model: @user, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :email, t('auth.signup.email.label'), class: "block text-base font-medium leading-6 text-gray-300" %>
          <div class="mt-2">
            <%= f.email_field :email, required: true, autocomplete: "off",
                class: "form-control",
                placeholder: t('auth.signup.email.placeholder') %>
          </div>
        </div>

        <div>
          <%= f.label :master_password, t('auth.signup.master_password.label'), class: "block text-base font-medium leading-6 text-gray-300" %>
          <div class="mt-2">
            <%= f.password_field :master_password, required: true, autocomplete: "new-password",
                class: "form-control",
                placeholder: t('auth.signup.master_password.placeholder') %>
          </div>
          <p class="mt-2 text-sm text-gray-400"><%= t('auth.signup.master_password.hint') %></p>
        </div>

        <div>
          <%= f.label :master_password_confirmation, t('auth.signup.master_password_confirmation.label'), class: "block text-base font-medium leading-6 text-gray-300" %>
          <div class="mt-2">
            <%= f.password_field :master_password_confirmation, required: true, autocomplete: "new-password",
                class: "form-control",
                placeholder: t('auth.signup.master_password_confirmation.placeholder') %>
          </div>
        </div>

        <div>
          <%= f.submit t('auth.signup.submit'), class: "btn-primary" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300/20"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="bg-white/5 px-2 text-gray-300"><%= t('auth.signup.divider') %></span>
          </div>
        </div>

        <div class="mt-6 text-center text-base text-gray-300">
          <%= t('auth.signup.login_prompt') %>
          <%= link_to t('auth.signup.login_link'), login_path, class: "text-base font-semibold leading-6 text-gray-300 hover:text-white transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div> 

<%= image_tag "master-password.png", class: "w-full h-full z-[-1] absolute top-[-10%] left-[-30%] object-cover opacity-5" %>